{
  "name": "skillhub",
  "version": "1.0.0",
  "private": true,
  "description": "SkillHub - Plataforma de Compartilhamento de Conhecimento",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --filter=api build && pnpm run --filter=web build",
    "start": "pnpm run --parallel start",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "dev:api": "pnpm run --filter=api dev",
    "dev:web": "pnpm run --filter=web dev",
    "build:api": "pnpm run --filter=api build",
    "build:web": "pnpm run --filter=web build"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^1.10.0"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
